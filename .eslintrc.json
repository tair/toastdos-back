{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-trailing-spaces": "error",
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "__dirname": false,
        "it": true,
        "xit": true,
        "before": true,
        "beforeEach": true,
        "info": true,
        "describe": true
    }
}
